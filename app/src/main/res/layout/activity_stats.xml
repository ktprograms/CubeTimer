<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatsActivity">

    <Spinner
        android:id="@+id/stPuzzleSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stPuzzleSpinner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/countTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Solve Count: "
                android:textColor="@android:color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/bSingleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Best Solve: "
                android:textColor="@android:color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/meanTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Session Mean: "
                android:textColor="@android:color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/cMo3TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Mo3: "
                android:textColor="@android:color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/cAo5TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Ao5: "
                android:textColor="@android:color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/cAo12TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Ao12: "
                android:textColor="@android:color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/cMo25TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Mo25: "
                android:textColor="@android:color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/cAo5Ao5sTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Ao5Ao5s: "
                android:textColor="@android:color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/cMo50TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Mo50: "
                android:textColor="@android:color/black"
                android:textSize="25sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>